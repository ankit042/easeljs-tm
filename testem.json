{
  "framework": "mocha+chai",
  "src_files": [
    "lib/*.js",
    "tests/**/*_test.coffee"
  ],
  "before_tests": "coffee -c tests/*.coffee",
  "serve_files": [
    "examples/js/*.js",
    "lib/*.js",
    "tests/**/*_test.js"
  ],
  "after_tests": "rm tests/*.js",
  "launch_in_dev": [
    "Chrome",
    "Safari",
    "Firefox"
  ]
}